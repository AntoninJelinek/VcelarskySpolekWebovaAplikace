<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navigation">
            <div class="flex">
                <img src="~/img/logo.svg" class="navigation__logo" alt="">

                <ul class="navigation__list">
                    <li class="navigation__list-item">
                        <a href="#" class="navigation__list-item-link">O nás</a>


                    </li>
                    <li class="navigation__list-item">
                        <a asp-action="ArticleList" asp-controller="Home" class="navigation__list-item-link">Články</a>


                    </li>
       
                </ul>
            </div>
            @if(this.Context.Session.GetString("login")==null)
            {
                <a class="navigation__login-button" asp-controller="Home" asp-action="Login">
                    <span class="material-symbols-outlined">
                        login
                    </span>Přihlásit se
                </a>
            }
            else {
                <a class="navigation__login-button" asp-controller="Login" asp-action="Logout">
                    <span class="material-symbols-outlined">
                        person
                    </span>
                    <div class="navigation__logedin">
                        <span class="navigation__logedinUserName">@this.Context.Session.GetString("login")</span>
                        <span>logout</span>
                    </div>
                </a>
            }
         

        </nav>
    </header>
    <main>
        @RenderBody();

    </main>

    <footer class="footer">
        <div class="footer__div">
            <h2 class="footer__div-h2">O nás</h2>
            <ul>
                <li class="footer__div-item"><a class="footer__div-Link" href="#">Lorem ipsum</a></li>
